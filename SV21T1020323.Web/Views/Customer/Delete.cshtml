@{
    ViewBag.Title = "Xóa Khách hàng";
}
<div class="box box-danger">
    <div class="box-body">
        <form action="~/Customer/Delete" method="post">

            <div class="form-group">
                <label>Tên khách hàng</label>
                <p class="form-control-static">Tien Dung</p>
            </div>

            <div class="form-group">
                <label>Tên giao dịch</label>
                <p class="form-control-static">TX123</p>
            </div>

            <div class="form-group">
                <label>Điện thoại</label>
                <p class="form-control-static">0123456789</p>
            </div>

            <div class="form-group">
                <label>Email</label>
                <p class="form-control-static">123@gmail.com</p>
            </div>

            <div class="form-group">
                <label>Địa chỉ</label>
                <p class="form-control-static">Chi Lăng</p>
            </div>

            <div class="form-group">
                <label>Tỉnh thành</label>
                <p class="form-control-static">Thừa Thiên Huế</p>
            </div>

            <div class="form-group">
                <label>Trạng thái khách hàng</label>
                <p class="form-control-static">Khách hàng không bị khóa</p>
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary btn-danger">
                    <i class="fa fa-floopy-o"></i>
                    Xóa dữ liệu
                </button>
                <a href="~/Customer" class="btn btn-default">
                    Quay lại
                </a>
            </div>

            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>
