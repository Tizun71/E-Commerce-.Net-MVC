@{
    //Layout = null;
    ViewBag.Title = "Quản lý khách hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <!--Form để nhập đầu vào tìm kiếm-->
        <form id="formSearch" action="~/Customer" method="get">
            <div class="input-group">

                <input name="searchValue"
                       type="text"
                       class="form-control"
                       placeholder="Nhập tên khách hàng cần tìm"
                       autofocus />

                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="fa fa-search"><</i>
                    </button>

                    <a href="~/Customer/Create" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </div>
            </div>
        </form>

        <!--Hiển thị dữ liệu-->
        <p style="margin-top:10px">
            có <strong>100</strong> khách hàng
        </p>
        <div class="table-responsive">
            <table class="table table-bodered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên khách hàng</th>
                        <th>Tên giao dịch</th>
                        <th>Điện thoại</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th>Tỉnh/Thành</th>
                        <th>Bị khóa?</th>
                        <th style="width:80px"></th>
                    </tr>
                </thead>

                <tbody>
                    @for (int i = 1; i <= 10; i++)
                    {
                        <tr>
                            <td>Tiến Dũng</td>
                            <td>GD023</td>
                            <td>0123456789</td>
                            <td>tzdz@gmail.com</td>
                            <td>Chi lang</td>
                            <td>Hue</td>
                            <td>
                                <input type="radio">
                            </td>
                            <td class="text-right">
                                <a href="~/Customer/Edit/123" class="btn btn-xs btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Customer/Delete/123" class="btn btn-xs btn-danger">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

        <div class="text-center">
            <ul class="pagination">
                <li><a href="#">1</a></li>
                <li class="active"><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
            </ul>
        </div>
    </div>
</div>
