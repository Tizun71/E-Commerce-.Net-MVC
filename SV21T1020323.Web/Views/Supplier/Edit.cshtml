@model Supplier
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save" method="post" enctype="multipart/form-data">
            <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID" />

            <div class="form-group">
                <label>Tên nhà cung cấp</label>
                <input type="text" class="form-control" name="@nameof(Model.SupplierName)" value="@Model.SupplierName" autofocus>
                @Html.ValidationMessage(nameof(Model.SupplierName))
            </div>

            <div class="form-group">
                <label>Tên liên hệ</label>
                <input type="text" class="form-control" name="@nameof(Model.ContactName)" value="@Model.ContactName">
                @Html.ValidationMessage(nameof(Model.ContactName))
            </div>

            <div class="form-group">
                <label>Tỉnh thành</label>
                @Html.DropDownListFor(m => m.Province, SelectListHelper.Provinces(), new { @class = "form-control select2"})
                @Html.ValidationMessageFor(m => m.Province)
            </div>

            <div class="form-group">
                <label>Địa chỉ</label>
                <input type="text" class="form-control" name="@nameof(Model.Address)" value="@Model.Address">
            </div>

            <div class="form-group">
                <label>Số điện thoại</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone">
            </div>

            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="@nameof(Model.Email)" value="@Model.Email">
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh nhà cung cấp:</label>
                <div class="col-sm-10">
                    <input type="hidden" name="@nameof(Model.Photo)" value="@Model.Photo" />
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="~/assets/images/suppliers/@(string.IsNullOrWhiteSpace(Model.Photo) ? "nophoto.png" : Model.Photo)" class="img img-bordered" style="width:200px" alt="NoPhoto" />
                </div>
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floopy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>

        </form>
    </div>
</div>
