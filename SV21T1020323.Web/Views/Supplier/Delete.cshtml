@{
    ViewBag.Title = "Xóa nhà cung cấp";
}
<div class="box box-danger">
    <div class="box-body">
        <form action="~/Supplier/Delete" method="post">

            <div class="form-group">
                <label>Tên nhà cung cấp</label>
                <p class="form-control-static">Công ty cổ phần GAMZ</p>
            </div>

            <div class="form-group">
                <label>Tên liên hệ</label>
                <p class="form-control-static">GAMZ</p>
            </div>

            <div class="form-group">
                <label>Tỉnh/Thành</label>
                <p class="form-control-static">Thừa Thiên Huế</p>
            </div>

            <div class="form-group">
                <label>Địa chỉ</label>
