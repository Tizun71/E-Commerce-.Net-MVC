@model ChangePasswordViewModel

﻿@{
    ViewBag.Title = "Đổi mật khẩu";
}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Account/Save" method="post">
            @{
                var userName = User.GetUserData().UserName;
                <input type="hidden" name="userName" value="@userName" />
            }
            <div class="form-group">
                <label>Mật khẩu cũ:</label>
                <input type="password" class="form-control" name="@nameof(Model.oldPassword)" required autofocus value="@Model.oldPassword">
                @Html.ValidationMessage(nameof(Model.oldPassword))
            </div>

            <div class="form-group">
                <label>Mật khẩu mới:</label>
                <input type="password" class="form-control" name="@nameof(Model.newPassword)" required value="@Model.newPassword">
                @Html.ValidationMessage(nameof(Model.newPassword))
            </div>

            <div class="form-group">
                <label>Xác nhận lại mật khẩu:</label>
                <input type="password" class="form-control" name="@nameof(Model.confirmNewPassword)" required value="@Model.confirmNewPassword">
                @Html.ValidationMessage(nameof(Model.confirmNewPassword))
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                    </div>
                    <div class="col-md-6 text-right">
                        <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
                        <a href="~/" class="btn btn-default">Bỏ qua</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>