
@{
    //Layout = null
    ViewBag.Title = "Quản lý nhà cung cấp";
}

<div class ="box box-primary">
    <div class="box-body">
        <!--Search Form-->
        <form id="formSearch" action="~/Supplier" method="get">
            <div class="input-group">

                <input name="searchValue"
                       type="text"
                       class="form-control"
                       placeholder="Nhập tên nhà cung cấp cần tìm"
                       autofocus />

                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="fa fa-search"><</i>
                    </button>

                    <a href="~/Supplier/Create" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </div>
            </div>
        </form>

        <!--Hiển thị dữ liệu-->
        <p style="margin-top:10px">
            có <strong>100</strong>
        </p>
        <div class="table-responsive">
            <table class="table table-bodered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên nhà cung cấp</th>
                        <th>Tên liên hệ</th>
                        <th>Tỉnh/Thành</th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th style="width:80px"></th>
                    </tr>
                </thead>

                <tbody>
                    @for (int i = 1; i <= 10; i++)
                    {
                        <tr>
                            <td>Công ty cổ phần GAMZ</td>
                            <td>GAMZ</td>
                            <td>Thừa Thiên Huế</td>
                            <td>77 Nguyễn Huệ</td>
                            <td>0914172116</td>
                            <td>office@gamz.vn</td>
                            <td class="text-right">
                                <a href="~/Supplier/Edit/123" class="btn btn-xs btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Supplier/Delete/123" class="btn btn-xs btn-danger">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

        <div class="text-center">
            <ul class="pagination">
                <li><a href="#">1</a></li>
                <li class="active"><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
